{
  "id": "catenary",
  "name": "Catenary",
  "version": "1.3.0",
  "description": "High-performance multiplexing bridge between MCP and LSP servers.",
  "publisher": "MarkWells-Dev",
  "mcpServers": {
    "catenary": {
      "command": "catenary"
    }
  },
  "hooks": {
    "AfterTool": [
      {
        "matcher": "read_file|write_file|replace",
        "hooks": [
          {
            "name": "catenary-notify",
            "type": "command",
            "command": "catenary notify --format=gemini"
          }
        ]
      }
    ]
  }
}
