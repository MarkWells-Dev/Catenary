{
  "hooks": {
    "BeforeTool": [
      {
        "matcher": "read_file|write_file|replace",
        "hooks": [
          {
            "name": "catenary-acquire",
            "type": "command",
            "command": "catenary acquire --format=gemini"
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "read_file|write_file|replace",
        "hooks": [
          {
            "name": "catenary-release",
            "type": "command",
            "command": "catenary release --format=gemini"
          }
        ]
      }
    ]
  }
}
