{
  "hooks": {
    "BeforeTool": [
      {
        "matcher": "write_file|replace",
        "hooks": [
          {
            "name": "catenary-lock-acquire",
            "type": "command",
            "command": "catenary lock acquire --format=gemini"
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "read_file|write_file|replace",
        "hooks": [
          {
            "name": "catenary-notify",
            "type": "command",
            "command": "catenary notify --format=gemini"
          }
        ]
      },
      {
        "matcher": "write_file|replace",
        "hooks": [
          {
            "name": "catenary-lock-track-read",
            "type": "command",
            "command": "catenary lock track-read"
          }
        ]
      },
      {
        "matcher": "write_file|replace",
        "hooks": [
          {
            "name": "catenary-lock-release",
            "type": "command",
            "command": "catenary lock release"
          }
        ]
      },
      {
        "matcher": "read_file",
        "hooks": [
          {
            "name": "catenary-lock-track-read",
            "type": "command",
            "command": "catenary lock track-read"
          }
        ]
      }
    ]
  }
}
