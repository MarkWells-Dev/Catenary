{
  "description": "LSP diagnostics, root sync, and file locking via catenary hooks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "catenary sync-roots --format=claude"
          }
        ]
      },
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "catenary lock acquire --format=claude"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "catenary notify --format=claude"
          },
          {
            "type": "command",
            "command": "catenary lock track-read"
          },
          {
            "type": "command",
            "command": "catenary lock release"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "catenary lock track-read"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "catenary lock release --grace 0"
          }
        ]
      }
    ]
  }
}
